extends layout

block content

    .card
        .card-body
            .card
                .card-body
                    div.container-fluid.d-inline
                        div.d-inline.float-left(style='background-color:white;')
                            a.btn.btn-outline-success.m-3.d-inline(href="/administrar") Regresar
                        div.d-inline.float-right(style='background-color:white;')
                            a.btn.btn-outline-success.m-3.d-inline(href='/create-theater') Agregar sede
                            a.btn.btn-outline-success.m-3.d-inline(href='/update-theater') Modificar sede 
            .card
                .card-body
                    .container-fluid.row
                        .container-fluid.col-8#table
                            h3#text SEDES DISPONIBLES
                            hr
                            br
                            table.table.bg-white
                                thead.text-center
                                    tr(style="text-align:center;")
                                        th(scope='col') Id
                                        th(scope='col') Fiscal Name
                                        th(scope='col') Location
                                        th(scope='col') Opening Time
                                        th(scope='col') Closing Time
                                        th     
                                tbody
                                    -for(let i = 0; i <theater.length; i++)
                                        tr(style="text-align:center;")
                                            th(scope='row')
                                                h5 #{theater[i].id}
                                            td
                                                h5 #{theater[i].Fiscal_name}
                                            td 
                                                h5 #{theater[i].Location}
                                            td
                                                h5 #{theater[i].Opening_time}
                                            td
                                                h5 #{theater[i].Closing_time}
                                            td
                                                form(method='POST' action='/deleteTheater')
                                                    button.btn.btn-danger(value=theater[i].id, name='id') X 

